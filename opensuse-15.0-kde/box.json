{
  "variables": {
    "docker_registry": "https://index.docker.io",
    "docker_username": "morawskim",
    "docker_password": "{{ env `DOCKER_TOKEN` }}"
  },
  "sensitive-variables": [
    "docker_password"
  ],
  "builders": [
    {
      "type": "docker",
      "image": "opensuse/leap:15.0",
      "commit": true,
      "changes": [
        "USER user",
        "ENV DISPLAY :1",
        "ENV KDE_FULL_SESSION true",
        "ENV XDG_RUNTIME_DIR /run/user",
        "WORKDIR /home/user",
        "CMD [\"startkde\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "morawskim/opensuse-leap-kde5",
        "tag": "15.0.{{ isotime \"2006-01-02\" }}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "{{user `docker_registry`}}",
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "morawskim/opensuse-leap-kde5",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "{{user `docker_registry`}}",
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ]
}
