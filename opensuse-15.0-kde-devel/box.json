{
  "variables": {
    "docker_registry": "https://index.docker.io",
    "docker_username": "morawskim",
    "docker_password": "{{ env `DOCKER_TOKEN` }}"
  },
  "sensitive-variables": [
    "docker_password"
  ],
  "builders": [
    {
      "type": "docker",
      "image": "morawskim/opensuse-leap-kde5",
      "commit": true,
      "exec_user": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "morawskim/opensuse-leap-kde5-devel",
        "tag": "15.0.{{ isotime \"2006-01-02\" }}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "morawskim/opensuse-leap-kde5-devel",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "keep_input_artifact": false,
        "login": true,
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ]
}
