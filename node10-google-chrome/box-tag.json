{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/usr/local/bin/docker-entrypoint.sh\"]",
        "CMD [\"bash\"]"
      ],
      "commit": true,
      "image": "morawskim/node10-google-chrome",
      "type": "docker"
    }
  ],
  "post-processors": [
    [
      {
        "repository": "morawskim/node10-google-chrome",
        "tags": [
          "{{ user `docker_tag` }}"
        ],
        "type": "docker-tag"
      },
      {
        "login": true,
        "login_password": "{{user `docker_password`}}",
        "login_username": "{{user `docker_username`}}",
        "type": "docker-push"
      }
    ]
  ],
  "sensitive-variables": [
    "docker_password"
  ],
  "variables": {
    "docker_password": "{{ env `DOCKER_TOKEN` }}",
    "docker_tag": null,
    "docker_username": "morawskim"
  }
}

